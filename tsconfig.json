{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "app/**/*.ts"
    ]
}
